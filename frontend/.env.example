# Environment variables for DCA FHE Bot frontend

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Ethereum Network Configuration
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_NETWORK_NAME=sepolia

# DCA FHE Bot Contract Addresses (Latest Sepolia Deployment)
NEXT_PUBLIC_FUND_POOL_ADDRESS=
NEXT_PUBLIC_INTENT_COLLECTOR_ADDRESS=
NEXT_PUBLIC_BATCH_PROCESSOR_ADDRESS=

# External Contract Addresses (Sepolia)
NEXT_PUBLIC_USDC_ADDRESS=
NEXT_PUBLIC_WETH_ADDRESS=
NEXT_PUBLIC_UNISWAP_ROUTER_ADDRESS=
NEXT_PUBLIC_PRICE_FEED_ADDRESS=

# API Endpoints (Replace YOUR_INFURA_KEY with your actual Infura API key)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
NEXT_PUBLIC_EXPLORER_URL=https://sepolia.etherscan.io

# FHE Configuration
NEXT_PUBLIC_FHE_ENABLED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET_FAUCET=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Deployment Info
NEXT_PUBLIC_DEPLOYMENT_NETWORK=sepolia
